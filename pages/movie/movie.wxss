page {
  display: flex;
  flex-direction: column;
  align-items:  center;
}
text{
  padding:0;
  line-height: 1em;
}
.jiazai{
  text-align: center;
  padding:40rpx 0;
}
.jiazai text{
  width:30rpx;
  height:30rpx;
  background: #ccc;
  display: inline-block;
  border-radius:50%;
  margin:0 10rpx;
}
@keyframes jia1{
  0%{
     background: #ccc;
  }
  33%{
     background: #393d49;
     transform:scale(1.4)
  }
  66%{
     background: #ccc;
  }  
  100%{
     background: #ccc;
  }

}

@keyframes jia2{
  0%{
     background: #ccc;
  }
   33%{
     background: #ccc;
  } 
  66%{
     background: #393d49;
     transform:scale(1.4)
  }
  100%{
     background: #ccc;
  }

}

@keyframes jia3{
  0%{
     background: #ccc;
  }
  33%{
     background: #ccc;
  }
    66%{
     background: #ccc;
  }
  100%{
     background: #393d49;
     transform:scale(1.4)
  }

}


.animation1{
  animation:jia1 0.9s infinite;
}
.animation2{
  animation:jia2 0.9s infinite;
}
.animation3{
  animation:jia3 0.9s infinite;
}